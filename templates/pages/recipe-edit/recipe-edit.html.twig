{% form_theme form with [
    'form/text/text.html.twig',
    'form/submit/submit.html.twig'
] %}

{% extends 'base.html.twig' %}

{% block title %} {{ 'PAGES.RECIPE_EDIT.TITLE' | trans }} {% endblock %}

{% block body %}
    <main>
        <div class="row">
            <div class="col s12 m6 offset-m3 l4 offset-l4 xl4 offset-xl4">
                {{ form_start(form, {
                    'attr': {

                    }
                }) }}
                <div class="row">
                    <div class="col s12 m12 l12 xl12">
                        {{ form_widget(form.title, {
                            'attr': {
                                'placeholder':  'PAGES.RECIPE_EDIT.FORM.TITLE_PLACEHOLDER'
                            },
                            'label':        'PAGES.RECIPE_EDIT.FORM.TITLE_LABEL'
                        }) }}

                        {{ form_widget(form.submit, {
                            'label': 'PAGES.RECIPE_EDIT.FORM.SUBMIT_LABEL'
                        }) }}
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </main>
{% endblock %}